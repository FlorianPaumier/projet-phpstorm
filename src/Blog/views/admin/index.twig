{% extends '@admin/layout.twig' %}

{% block title "Editer les articles" %}

{% block body %}

    <p class="text-right">
        <a class="btn btn-primary" href="{{ path('blog.admin.create') }}">Ajouter un article</a>
    </p>
    <table class="table table-striped">
        <thead>
        <tr>
            <td>Titre</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>
                        <a href="{{ path('blog.admin.edit', {id: item.id}) }}" class="btn btn-primary">Edition</a>
                        <form style="display : inline" action="{{ path('blog.admin.delete', {id: item.id}) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn danger">Suppression</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ paginate(items, 'blog.admin.index') }}

{% endblock %}
